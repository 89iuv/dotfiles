{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin-macchiato",
  "model": "ollama/qwen3-coding",
  "permission": {
    "read": "allow",
    "glob":"allow",
    "grep":"allow",
    "list":"allow",
    "*": "ask",
    "webfetch": "deny",
    "websearch": "deny",
    "codesearch": "deny"
  },
  "provider": {
    "ollama": {
      "name": "Ollama (local)",
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "qwen3-coding": {
          "name": "qwen3-coding"
        },
      }
    }
  }
}
