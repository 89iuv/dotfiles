{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin-macchiato",
  "model": "ollama/gpt-oss-20b-ol:latest",
  "default_agent": "build",
  "provider": {
    "ollama": {
      "name": "Ollama (local)",
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "gpt-oss-20b-ol:latest": {}
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "{env:CONTEXT7_API_KEY}"
      ],
      "enabled": true
    },
    "wikipedia": {
      "type": "local",
      // NOTE: set WIKIPEDIA_ACCESS_TOKEN environment variable
      "command": ["uvx", "wikipedia-mcp"]
    },
    "github": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN={env:GITHUB_API_KEY}",
        "ghcr.io/github/github-mcp-server"
      ],
      "enabled": true
    }
  }
}
