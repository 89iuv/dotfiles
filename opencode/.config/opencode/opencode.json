{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "model": "ollama/gpt-oss:20b",
  "small_model": "ollama/gpt-oss:20b",
  "default_agent": "plan",
  "permission": {
    "webfetch": "ask",
    "context7*": "ask",
    "wikipedia*": "ask",
    "github*": "ask",
  },
  "enabled_providers": ["ollama"],
  "provider": {
    "ollama": {
      "name": "Ollama (private)",
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "{env:OLLAMA_WEB_URL}/v1",
        "headers": {
          "Authorization": "Bearer {env:OLLAMA_API_KEY}"
        },
      },
      "models": {
        "gpt-oss:20b": {
          "name": "gpt-oss:20b"
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "{env:CONTEXT7_API_KEY}"
      ],
      "enabled": true
    },
    "wikipedia": {
      "type": "local",
      // NOTE: set WIKIPEDIA_ACCESS_TOKEN environment variable
      "command": ["uvx", "wikipedia-mcp"]
    },
    "github": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN={env:GITHUB_API_KEY}",
        "ghcr.io/github/github-mcp-server"
      ],
      "enabled": true
    }
  }
}
